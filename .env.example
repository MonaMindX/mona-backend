# ======================================================
# Mona Backend Environment Configuration Example
# ======================================================
# Copy this file to '.env' and adjust values as needed
# DO NOT commit the actual .env file to version control

# ======================================================
# Hayhooks Configuration
# ======================================================
# Directory containing Hayhooks pipeline definitions
HAYHOOKS_PIPELINES_DIR=/path/to/pipelines/folder

# Network settings for Hayhooks service
HAYHOOKS_HOST=localhost     # Host where Hayhooks will listen
HAYHOOKS_PORT=1416          # Port for Hayhooks service

# ======================================================
# Logging Configuration
# ======================================================
# Log level: DEBUG, INFO, WARNING, ERROR, or CRITICAL
LOG=INFO

# ======================================================
# Application Environment
# ======================================================
# Runtime environment: development, production, or test
ENVIRONMENT=development

# ======================================================
# Database Configuration
# ======================================================
# PostgreSQL connection string
PG_CONN_STR=postgresql://user:password@localhost/database_name

# ======================================================
# Document Splitter Configuration
# ======================================================
# Method to split documents: function, page, passage, period, word, line, sentence
DOCUMENT_SPLITTER_SPLIT_BY=sentence

# Language of documents: en, de
DOCUMENT_SPLITTER_LANGUAGE=en

# Maximum length of each split document
DOCUMENT_SPLITTER_SPLIT_LENGTH=5

# Overlap between split documents
DOCUMENT_SPLITTER_SPLIT_OVERLAP=0

# ======================================================
# OpenAI API Configuration
# ======================================================
# OPENAI KEY
OPENAI_API_KEY=yourkey
OPENAI_API_BASE_URL=http://0.0.0.0:1234/v1

# ======================================================
# Document & Text Embedder Configuration
# ======================================================
# Embedding model path/name
EMBEDDER_EMBEDDING_MODEL=text-embedding-qwen3-embedding-0.6b

# Dimensionality of document embeddings
EMBEDDER_DIMENSIONS=1024

# Model Timeout in seconds
EMBEDDER_MODEL_TIMEOUT=600

# ======================================================
# LLM Configuration
# ======================================================
# LLM model path/name
LLM_MODEL=liquid/lfm2-1.2b

# LLM max tokens limit
LLM_MAX_TOKENS=1024

# LLM temperature
LLM_TEMPERATURE=0.7

# LLM Timeout in seconds
LLM_TIMEOUT=600

# ======================================================
# Document Store Configuration
# ======================================================
# Dimensionality of document store embeddings
DOCUMENT_STORE_EMBEDDING_DIMENSIONS=1024

# Vector similarity function: cosine_similarity, inner_product, l2_distance
DOCUMENT_STORE_VECTOR_FUNCTION=cosine_similarity

# Whether to recreate the document store table
DOCUMENT_STORE_RECREATE_TABLE=false

# Search strategy: exact_nearest_neighbor, hnsw
DOCUMENT_STORE_SEARCH_STRATEGY=exact_nearest_neighbor
